# 应用设置
APP_NAME="AI Assistant API"
APP_VERSION="0.1.0"
API_PREFIX="/api/v1"
DEBUG=True

# 数据库设置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=ai_assistant

# OpenAI API设置
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# MCP设置
MCP_API_BASE_URL=http://localhost:8000
MCP_API_KEY=your_mcp_api_key

# 日志设置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 安全设置
SECRET_KEY=your_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 服务器设置
HOST=0.0.0.0
PORT=8000

# LLM设置
LLM_MODEL=gpt-3.5-turbo
LLM_TIMEOUT=60
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# --- MCP 配置 ---
# MCP 客户端代码的相对路径 (相对于 backend 目录) 